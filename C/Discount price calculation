#include <stdio.h>

int discount(int price)
{
    int dis;

    if (price < 1000)
    {
        return 0;
    }
    else if (price >= 1000 && price <= 5000)
    {
        dis = price * 10/100;
        return dis;
    }
    else
    {
        dis = price * 20/100;
        return dis;
    }
}

int main()
{
    int price, disc, final_amt;

    printf("Enter the price of item: ");
    scanf("%d", &price);

    if (price <= 0)
    {
        printf("Invalid price entered!!!\n");
        final_amt = 0;
    }
    else
    {
        disc = discount(price);
        final_amt = price - disc;
    }

    printf("Final payable amount is: %d\n", final_amt);

    return 0;
}
