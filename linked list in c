#include<stdio.h>
#include<stdlib.h>
struct node
{
	int data;
	struct node *link;
};
struct node *head=NULL,*cpt=NULL,*newnode=NULL;
struct node *createlist(int n)
{
	int i,data;
	for(i=0;i<n;i++)
	{
	    newnode=(struct node *)malloc(sizeof(struct node));
	    printf("Enter info[node %d]:- ",i+1);
		scanf("%d",&data);
	    newnode->data=data;
 	    newnode->link=NULL;
	    if(head==NULL)
		{
		   head=newnode;
		   cpt=newnode;
	    }
		else
		{
		    cpt->link=newnode;
		    cpt=cpt->link;
		}
	}
	return head;
}
void display(struct node *head)
{
	struct node *cpt=head;
	printf("Linked list as follows: \n");
	printf("[head]->");
	while(cpt!=NULL)
	{
		printf("%d->",cpt->data);
		cpt=cpt->link;
	}
	printf("[NULL]\n");
}
int main()
{
	int n;
	struct node *head=NULL;
	printf("Enter the number of nodes you want to enter: ");
	scanf("%d",&n);
	if(n>10)
	{
		printf("List can have maximum 10 nodes!!");
	}
	else
	{
		head=createlist(n);
	    display(head);
	}
	return 0;
}
