#include<stdio.h>
void bubble_sort(int n,int arr[n])
{
	int i,j,temp,flag;
	for(i=0;i<n-1;i++)
	{
		flag=0;
		for(j=0;j<n-i-1;j++)
		{
			if(arr[j]>arr[j+1])
			{
				temp=arr[j];
				arr[j]=arr[j+1];
				arr[j+1]=temp;
				flag=flag+1;
			}
		}
		if(flag==0)
		{
			printf("\n!!!Array is already sorted!!!");
			break;
		}
	}
	printf("\nSorted array is as follows: \n");
	for(i=0;i<n;i++)
	{
		printf("%d\t",arr[i]);
	}
}
int main()
{
	int n,i;
	printf("Enter the number of elements in your array: ");
	scanf("%d",&n);
	int arr[n];
	printf("Enter the elements in array: \n");\
	for(i=0;i<n;i++)
	{
		scanf("%d",&arr[i]);
	}
	printf("Entered array is as follows: \n");
	for(i=0;i<n;i++)
	{
		printf("%d\t",arr[i]);
	}
	bubble_sort(n,arr);
  return 0;
}
